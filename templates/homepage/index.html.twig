{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block body %}
<div id = "homepage_home">
    <h1 class = "text-center border-bottom pb-3">Strona główna</h1>
    
    <div class = "box row g-2 border p-2 mt-4">
        {% for category in categories %}
            <div class = "col-12 col-md-6 my-2">
                <a class = "border p-3 fw-bold text-center bg-light d-block" href="{{path("post_list", {category_id: category.id})}}" role="button">
                    {{ category.name|capitalize  }}
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
